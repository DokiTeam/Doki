{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["gradle-version-catalog"],
  "dependencyDashboard": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)libs\\.versions\\.toml$"],
      "matchStrings": [
        "exts\\s*=\\s*\"(?<currentDigest>[a-f0-9]+)\""
      ],
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "https://github.com/DokiTeam/doki-exts",
      "currentValueTemplate": "base",
      "packageNameTemplate": "doki-exts"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["doki-exts"],
      "groupName": "doki-exts",
      "branchName": "renovate/doki-exts",
      "commitMessagePrefix": "chore(deps): Update extensions / plugins for Doki",
      "commitMessageTopic": "Replace doki-exts version with latest commit from base branch",
      "automerge": true,
      "automergeType": "branch",
      "schedule": ["daily"]
    },
    {
      "matchPackagePatterns": [".*"],
      "excludePackageNames": ["doki-exts"],
      "enabled": false
    }
  ]
}
