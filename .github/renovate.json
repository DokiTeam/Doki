{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "enabledManagers": ["gradle-version-catalog"],
  "dependencyDashboard": true,

  "packageRules": [
    {
      "matchPackagePatterns": ["^com\\.github\\.DokiTeam:doki-exts$"],
      "groupName": "Update extensions for Doki",
      "description": "Update latest extensions for Doki",
      "datasource": "github-commits",
      "depName": "DokiTeam/doki-exts",
      "lookupName": "DokiTeam/doki-exts#base",
      "branchName": "renovate/update-exts",
      "commitMessagePrefix": "chore(deps): Update new extensions from doki-exts",
      "extractVersion": "^([a-f0-9]{10})$",
      "replaceVersion": "{{commitShaShort}}",
      "automerge": true,
      "automergeType": "branch",
      "schedule": ["daily"]
    },
    {
      "matchPackagePatterns": [".*"],
      "enabled": false
    }
  ]
}
